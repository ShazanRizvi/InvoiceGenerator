generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model invoice{
  id          String   @id @default(cuid())
  invoice_number String
  company_address String
  bill_to       String
  invoice_date   DateTime
  due_date       DateTime
  items         Json
  sub_total      Float
  total         Float
  discount      Float?
  tax_rate       Float?
  created_At     DateTime? @default(now())
  updated_At     DateTime? @updatedAt
}